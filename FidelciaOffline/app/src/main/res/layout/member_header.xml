<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="Membre"
                    android:gravity="center|left"
                    android:textSize="40dp"
                    android:id="@+id/nouveau_membre"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="supprimer"
                        android:background="@drawable/button_stroke_background"
                        android:elevation="5dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Créer un bon"
                        android:background="@drawable/button_stroke_background"
                        android:elevation="5dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Créditer"
                        android:background="@drawable/button_stroke_background"
                        android:elevation="5dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="10dp"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="ok"
                        android:background="@drawable/button_solid_background"
                        android:elevation="5dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/button_member_update_ok"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>