<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.novo.fidelicia.new_member.Nouveau_Membre"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="Nouveau Membre"
                    android:gravity="center|left"
                    android:textSize="@dimen/text_30"
                    android:id="@+id/nouveau_membre"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:elevation="5dp"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:textSize="@dimen/text_20"
                        android:textColor="@color/black"
                        android:text="Annuler"
                        android:background="@drawable/button_stroke_background"
                        android:elevation="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/btn_annular_Nouveau_Membre"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:textSize="@dimen/text_25"
                        android:textColor="@color/white"
                        android:text="Créditer"
                        android:background="@drawable/button_solid_background"
                        android:elevation="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/button_Créditer"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="5dp"
                android:elevation="15dp"
                app:cardUseCompatPadding="true"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:text="FICHE D'INSCRIPTION"
                        android:gravity="center"
                        android:textSize="@dimen/text_24"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    >
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_margin="5dp"

                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="Carte :"
                                        />

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            style="@style/EditTextStyleInputLayout"
                                            android:maxLines="1"
                                            android:id="@+id/carte_newMembre"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="Civilite :" />

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <Spinner
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/spinner_civilite"
                                            android:gravity="center"
                                            >
                                        </Spinner>
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:background="@android:color/darker_gray"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="Prenom :" />

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            style="@style/EditTextStyleInputLayout"
                                            android:maxLines="1"
                                            android:id="@+id/PrenomNewMember"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="Nom :" />

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            style="@style/EditTextStyleInputLayout"
                                            android:maxLines="1"
                                            android:id="@+id/nom_newMember"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.5"
                                            android:orientation="vertical"
                                            android:id="@+id/date_of_birth_selection"
                                            >
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="3dp"
                                                android:text="Date de naissance :"
                                                android:maxLines="1"
                                                />

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    style="@style/EditTextStyleInputLayout"
                                                    android:maxLines="1"
                                                    android:id="@+id/date_de_naissance_NewMember"
                                                    android:layout_gravity="bottom"
                                                    android:layout_marginTop="5dp"
                                                    android:textSize="@dimen/text_22"
                                                    android:textColor="@color/black"
                                                    />
                                                <View
                                                    android:layout_width="match_parent"
                                                    android:layout_height="2dp"
                                                    android:background="@android:color/darker_gray" />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.5"
                                            android:orientation="vertical"
                                            android:layout_marginLeft="8dp"
                                            >
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Age :" />

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    style="@style/EditTextStyleInputLayout"
                                                    android:maxLines="1"
                                                    android:id="@+id/Age_NewMember"
                                                    android:layout_gravity="bottom"
                                                    android:layout_marginTop="5dp"
                                                    android:textSize="@dimen/text_22"
                                                    android:textColor="@color/black"
                                                    />
                                                <View
                                                    android:layout_width="match_parent"
                                                    android:layout_height="2dp"
                                                    android:background="@android:color/darker_gray" />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Address :"
                                        android:layout_marginLeft="3dp"
                                        />

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            style="@style/EditTextStyleInputLayout"
                                            android:maxLines="1"
                                            android:id="@+id/address_NewMember"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.8"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Code Postal :"
                                                android:layout_marginLeft="3dp"
                                                />
                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <EditText
                                                    style="@style/EditTextStyleInputLayout"
                                                    android:maxLines="1"
                                                    android:id="@+id/postal_code_NewMember"
                                                    />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.5"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Ville :"
                                                android:layout_marginLeft="3dp"
                                                />

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <Spinner
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:id="@+id/spinner_ville"
                                                    android:gravity="center"
                                                    >
                                                </Spinner>
                                                <View
                                                    android:layout_width="match_parent"
                                                    android:layout_height="2dp"
                                                    android:background="@android:color/darker_gray"
                                                    />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="Pays :" />
                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <Spinner
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/spinner_Pays"
                                            android:gravity="center"
                                            >
                                        </Spinner>
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:background="@android:color/darker_gray"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="Telephone :" />

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            style="@style/EditTextStyleInputLayout"
                                            android:maxLines="1"
                                            android:id="@+id/telephone_NewMember"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:text="Email :" />

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            style="@style/EditTextStyleInputLayout"
                                            android:maxLines="1"
                                            android:id="@+id/Email_NewMember"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.8"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="3dp"
                                                android:text="Societe :" />

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <EditText
                                                    style="@style/EditTextStyleInputLayout"
                                                    android:maxLines="1"
                                                    android:id="@+id/Societe_NewMember"
                                                    />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.5"
                                            android:orientation="vertical"
                                            android:layout_marginLeft="10dp"
                                            >
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="3dp"
                                                android:text="Profession :" />

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <Spinner
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:id="@+id/spinner_profession"
                                                    android:gravity="center"
                                                    >
                                                </Spinner>
                                                <View
                                                    android:layout_width="match_parent"
                                                    android:layout_height="2dp"
                                                    android:background="@android:color/darker_gray"
                                                    />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
