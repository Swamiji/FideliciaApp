<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Êtes-vous sur de déditer "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cette carte cadeau de"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[DEBITAMOUNT]€ "
            android:textColor="@color/light_green"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/debited_amount_popup"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Oui, je confirme"
            android:background="@drawable/button_solid_background"
            android:elevation="5dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:id="@+id/oui_je_confirm"
            android:layout_marginTop="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:textColor="@color/Red"
            android:text="Non !"
            android:background="@drawable/red_stroke_background"
            android:elevation="5dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:id="@+id/non"
            android:layout_marginTop="10dp"
            />

</LinearLayout>